<!-- /templates/customers/reset_password.liquid -->

<section id="ResetPassword" class="center account">
  <section class="col">
    <div class="reset-password">
        <h2 class="theme">{{ 'customer.reset_password.title' | t }}</h2>
        <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>

        {% form 'reset_customer_password' %}
          <div class="input-group">
            {{ form.errors | default_errors }}
          </div>

          <div class="input-group">
            <input type="password" class="input" value="" name="customer[password]" id="customer_password"/>
            <label for="password">{{ 'customer.reset_password.password' | t }}</label>
          </div>

          <div class="input-group">
          	<input type="password" value="" class="input" name="customer[password_confirmation]" id="customer_password_confirmation"/>
            <label for="password_confirmation">{{ 'customer.reset_password.password_confirm' | t }}</label>
          </div>

          <button class="button button--primary" type="submit">{{ 'customer.reset_password.submit' | t }}</button>
        {% endform %}
    </div>
  </section>
</section>
