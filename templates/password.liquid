{% comment %}
	The share buttons share the home page URL. The share text is grabbed from the store
	meta description.
{% endcomment %}

{% layout 'password' %}

<div class="template-password__content">
	<h2 class="template-password__h2">{{ 'general.password_page.opening_soon' | t }}</h2>

	{% unless shop.password_message == blank %}
		<p>
			{{ shop.password_message }}
		</p>
	{% endunless %}

	{% form 'customer' %}

	{{ form.errors | default_errors }}

		{% if form.posted_successfully? %}
			<ul class="form-success">
				<li>{{ 'general.password_page.signup_form_success' | t }}</li>
			</ul>
		{% else %}

			<h4 class="template-password__h4">{{ 'general.password_page.signup_form_heading' | t }}</h4>
			<input type="hidden" name="contact[tags]" value="prospect, password page">

			<div class="password-submit-group">
				<input
					type="email"
					name="contact[email]"
					id="email"
					class="password-input"
					required
					spellcheck="false"
					autocomplete="off"
					autocapitalize="off"
					placeholder="{{ 'general.password_page.signup_form_email_placeholder' | t }}"
			>
				<button type="submit" name="commit" class="password-button">
					{{ 'general.password_page.signup_form_submit' | t }}
				</button>
			</div>


		{% endif %}
	{% endform %}

	{% if settings.share_facebook or settings.share_twitter %}
		{% include 'social-sharing' %}
	{% endif %}

	<a href="#Login" class="js-open-password-popup">{{- 'general.password_page.password_link' | t -}}</a>
</div>

