<aside class="account-sidebar">
  <h3 class="theme">{{ 'customer.account.title' | t }}</h3>

  <ul>
    <li><a href="/account/">{{ 'customer.orders.title' | t }}</a></li>
    {% if customer.metafields.subscriptions.customer_string %}
      <li>
        <!-- Begin ReCharge code -->
        <a href="/tools/recurring/customer/{{ customer.metafields.subscriptions.customer_string }}/subscriptions/">Manage Subscriptions</a>
        <!-- End ReCharge code -->
      </li>
    {% endif %}
    <li><a href="/account/addresses/">{{ 'customer.account.view_addresses' | t }}</a></li>
    {% if shop.email %}
      <li><a href="mailto:{{ shop.email }}" target="_blank">Contact us</a></li>
      <li>{{ 'layout.customer.log_out' | t | customer_logout_link }}</li>
    {% endif %}
  </ul>
</aside>
