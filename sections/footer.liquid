<footer class="footer">
	<div class="container">
		<div class="footer__guarantee">
			{% if section.settings.guarantee_icon != blank %}
				<img src="{{ section.settings.guarantee_icon | img_url: '42x' }}"
					 class="footer__guarantee-icon"
				   width="21px"
				   height="21px"
					 alt="{{ section.settings.guarantee_icon.alt }}">
			{% endif %}

			{% if section.settings.guarantee_label != blank %}
				<span class="footer__guarantee-label">{{ section.settings.guarantee_label }}</span>
			{% endif %}

			{% if section.settings.guarantee_text != blank %}
				{{ section.settings.guarantee_text }}
			{% endif %}
		</div>

		<div class="footer__main">
			{%- assign footer_linklist = section.settings.footer_linklist -%}
			{%- assign footer_linklist_2 = section.settings.footer_linklist_2 -%}
			{%- assign footer_linklist_3 = section.settings.footer_linklist_3 -%}

			<div class="row">
				<div class="col-lg-3 self-center">
					{% if section.settings.footer_logo != blank %}
						<a href="/" class="footer__logo">
							{% include 'picture', image_desk: section.settings.footer_logo, image_mobile: , class_name: 'footer__logo-image', image_attr: , pic_attr: , figcaption: %}

							{% comment %}
							<img src="{{ section.settings.footer_logo | img_url: '248x' }}"
								 srcset="{{ section.settings.footer_logo | img_url: '248x' }} 1x, {{ section.settings.footer_logo | img_url: '496x' }} 2x"
								 class="footer__logo-image"
								 alt="{{ section.settings.footer_logo.alt | default: shop.name }}">
							{% endcomment %}
						</a>
					{% endif %}
				</div>

				<div class="col-lg-2 footer__col-menu text-center">
					{% if section.settings.menu_url_1 != blank and linklists[footer_linklist].links.size < 1 %}
						<div class="footer__title">
							<a href="{{ section.settings.menu_url_1 }}">{{ section.settings.menu_title_1 }}</a>
						</div>
					{% else %}
						<div class="footer__title footer__title--chevron js-footer-toggle">
							{{ section.settings.menu_title_1 }}
							<span class="footer__title-icon"></span>
						</div>
					{% endif %}

					{% if linklists[footer_linklist].links.size > 0 %}
						<div class="footer__accordion-content js-footer-accordion-content">
							<ul class="footer__linklist">
								{% for link in linklists[footer_linklist].links %}
									<li class="footer__linklist-item">
										<a href="{{ link.url }}" class="footer__linklist-link">{{ link.title }}</a>
									</li>
								{% endfor %}
							</ul>
						</div>
					{% endif %}
				</div>

				<div class="col-lg-2 footer__col-menu text-center">
					{% if section.settings.menu_url_2 != blank and linklists[footer_linklist_2].links.size < 1 %}
						<div class="footer__title">
							<a href="{{ section.settings.menu_url_2 }}">{{- section.settings.menu_title_2 -}}</a>
						</div>
					{% else %}
						<div class="footer__title footer__title--chevron js-footer-toggle">
							{{- section.settings.menu_title_2 -}}
							<span class="footer__title-icon"></span>
						</div>
					{% endif %}

					{% if linklists[footer_linklist_2].links.size > 0 %}
					<div class="footer__accordion-content js-footer-accordion-content">
						<ul class="footer__linklist">
							{% for link in linklists[footer_linklist_2].links %}
								<li class="footer__linklist-item">
									<a href="{{ link.url }}" class="footer__linklist-link">{{- link.title -}}</a>
								</li>
							{% endfor %}
						</ul>
					</div>
					{% endif %}
				</div>

				<div class="col-lg-2 footer__col-menu text-center">
					{% if section.settings.menu_url_3 != blank and linklists[footer_linklist_3].links.size < 1 %}
						<div class="footer__title">
							<a href="{{ section.settings.menu_url_3 }}">{{- section.settings.menu_title_3 -}}</a>
						</div>
					{% else %}
						<div class="footer__title footer__title--chevron js-footer-toggle">
							{{- section.settings.menu_title_3 -}}
							<span class="footer__title-icon"></span>
						</div>
					{% endif %}

					{% if linklists[footer_linklist_3].links.size > 0 %}
					<div class="footer__accordion-content js-footer-accordion-content">
						<ul class="footer__linklist">
							{% for link in linklists[footer_linklist_3].links %}
								<li class="footer__linklist-item">
									<a href="{{ link.url }}" class="footer__linklist-link">{{ link.title }}</a>
								</li>
							{% endfor %}
						</ul>
					</div>
					{% endif %}
				</div>

				<div class="col-lg-3 self-center">
					<div class="footer__socials">
						{% include 'social-icons' %}
					</div>
				</div>

			</div>
		</div>
	</div>

	<div class="footer__bottom">
		<span class="footer__copyright">Â© {{ 'now' | date: "%Y" }}, {{ section.settings.copyright_text }}</span>

		{% assign support_menu = section.settings.support_menu %}
		{% if linklists[support_menu].links.size > 0 %}
			{% for link in linklists[support_menu].links %}
				<a href="{{ link.url }}" class="footer__support-link">{{ link.title }}</a>
			{% endfor %}
		{% endif %}
	</div>
</footer>

