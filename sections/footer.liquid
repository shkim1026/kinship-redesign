		},
		{
			"type": "link_list",
			"id": "footer_linklist_2",
			"label": "Menu"
		},
		{
			"type": "header",
			"content": "Menu 3"
		},
		{
			"type": "text",
			"id": "menu_title_3",
			"label": "Menu heading",
			"default": "help"
		},
		{
			"type": "url",
			"id": "menu_url_3",
			"label": "Menu url",
			"info": "If menu list not set or menu list is empty - than link appear on menu heading"
		},
		{
			"type": "link_list",
			"id": "footer_linklist_3",
			"label": "Menu"
		},
