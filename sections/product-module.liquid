			"type":   "range",
			"id":     "header_bottom_padding_mobile",
			"min":       0,
			"max":       80,
			"step":      1,
			"unit":      "px",
			"label":     "Header bottom padding (mobile)",
			"default":   50
		},
        {
            "type": "header",
            "content": "Product Card Settings"
        },
        {
            "type": "radio",
            "id": "product_card_grid_col",
            "label": "Display 2 or 4 Products (mobile)",
            "options": [
                {
                    "value": "2",
                    "label": "2"
                },
                {
                    "value": "4",
                    "label": "4"
                }
            ],
            "default": "4"
        },
        {
            "type": "checkbox",
            "id": "stack_cards_mobile",
            "label": "Stack cards (mobile)",
            "default": false
        }
    ],
    "blocks": [
        {
			"type": "product_card",
			"name": "Product card",
			"limit": 4,
			"settings": [
